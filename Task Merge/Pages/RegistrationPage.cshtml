@page
@model Task_Merge.Pages.RegistrationPageModel
@{
}

<link rel="stylesheet" href="~/css/registration.css" asp-append-version="true" />

<body class="registration">
	<form class="blured-container white-border" id="form" method="post">
		<div class="form-header">
			<button class="interface-button" type="submit">
				<i class='bx bx-chevron-left'></i>
			</button>
			<h1 class="form-h1">Create account</h1>
		</div>

		<div class="free_space"></div>

		<input type="text" name="username" id="username-input" placeholder="Username">
		<input type="email" name="email" id="email-input" placeholder="Email">
		<input type="password" name="password" id="password-input" placeholder="Password">
		<input type="password" name="repeat_password" id="repeat-password-input" placeholder="Repeat password">

		<div class="role-selector">
			<p>Register as: </p>
			<select name="role" id="role-selector">
				<option selected>Student</option>
				<option>Teacher</option>
			</select>
		</div>

		<div class="free_space"></div>

		<button>Sign Up</button>
		<a href="Index"><h5>Log in</h5></a>
	</form>
</body>