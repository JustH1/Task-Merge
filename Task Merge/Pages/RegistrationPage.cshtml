@model Task_Merge.Pages.RegistrationPageModel
@{
}
<body id="registration">
	<form id="form" action="" method="post">
		<div class="form-header">
			<button type="submit">
				<i class='bx bx-chevron-left'></i>
			</button>
			<h1 class="form-h1">Create account</h1>
		</div>

		<div class="free_space"></div>

		<input class="form-input" type="text" name="username" id="username-input" placeholder="Username">
		<input class="form-input" type="email" name="email" id="email-input" placeholder="Email">
		<input class="form-input" type="password" name="password" id="password-input" placeholder="Password">
		<input class="form-input" type="password" name="repeat_password" id="repeat-password-input" placeholder="Repeat password">

		<div class="free_space"></div>

		<button class="form-button">Sign Up</button>
	</form>
</body>