@page "{id}"
@model Task_Merge.Pages.RatingTaskPageModel
@{
    ViewData["Title"] = "RatingTaskPage";
}
<link rel="stylesheet" href="~/css/about_task.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/mark_answer.css" asp-append-version="true" />

<body>
    <div id="header" class="go_back_link">
        <a id="page-go-back" asp-page="TeacherPage">
            <i class='bx bx-chevron-left'></i>
        </a>
    </div>

    <div id="content" class="content">
        <div class="card white-border blured-container">
            <div class="first_row">
                <h3>Task label</h3>
                <p class="sender_id">Teacher: @(Model.teacher.name)(@Model.teacher.id) Student: @(Model.student.name)(@Model.student.id)</p>
            </div>
            <div class="middle_row">
                <!-- style="display: none" if no files else style="display: block" -->
                <p>Pinned files:</p>

                <!-- Dynamic loading content -->
                @foreach (var item in Model.taskFileNames)
                {
                    <a href="DownloadFilePage?fileName=@item&taskId=@Model.currentTask.id">@item</a>
                }
                <!-- Dynamic loading content -->

            </div>

            <div class="horizontal-separator"></div>

            <div class="create-response">
                <input type="button" id="resulting-mark-input" name="resulting-mark" value="5" style="display: none;" readonly>

                <div class="marks-container">
                    <button id="mark-value-0" class="mark" type="button">0</button>
                    <button id="mark-value-1" class="mark" type="button">1</button>
                    <button id="mark-value-2" class="mark" type="button">2</button>
                    <button id="mark-value-3" class="mark" type="button">3</button>
                    <button id="mark-value-4" class="mark" type="button">4</button>
                    <button id="mark-value-5" class="mark" type="button">5</button>
                </div>

                <input id="comment-input" type="text" value="" name="comment" placeholder="Comment...">

                <button id="prepare-mark">Mark</button>
            </div>
        </div>
    </div>

    <div id="final-form" class="form-layer" style="display: none;">
        <form id="mark-form" method="post" class="white-border mark-resulting" style="display: grid;">
            <div class="shure-upper-row">
                <i id="form-go-back" class='bx bx-x'></i>
                <p class="shure-text">Are You shure?</p>
            </div>
            <div class="shure-mark-container">
                <input class="form-mark-value-text" type="text" value="Mark:" readonly>
                <input id="form-final-mark" class="response-mark" type="text" value="5" name="mark" readonly>
            </div>

            <div id="comment-block" class="comment">
                <input value="Your comment:" type="text" class="comment-shure-left-text">
                <input id="response-comment" class="response-comment" type="text" value="" name="comment" readonly>
            </div>
            <button id="finish">Send</button>
        </form>
    </div>

    <script src="../Scripts/mark_answer_script.js"></script>
</body>
